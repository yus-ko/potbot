<launch>
  <arg name="GROUP" default="/"/>
  <arg name="ROBOT_NAME" default="turtlebot3"/>
  <!--megarover turtlebot3-->
  <arg name="IS_SIMULATOR" default="true"/>
  <arg name="USE_RVIZ" default="true"/>
  <arg name="PUBLISH_COMMAND" default="true"/>

  <group ns="$(arg GROUP)">

    <include file="$(find potbot)/launch/Localization.launch">
      <arg name="ROBOT_NAME" value="$(arg ROBOT_NAME)"/>
      <arg name="IS_SIMULATOR" value="$(arg IS_SIMULATOR)"/>
      <arg name="USE_RVIZ" value="$(arg USE_RVIZ)"/>
    </include>

    <include file="$(find potbot)/launch/PathPlanning.launch">
      <arg name="USE_RVIZ" value="$(arg USE_RVIZ)"/>
    </include>

    <include file="$(find potbot)/launch/Controller.launch">
      <arg name="ROBOT_NAME" value="$(arg ROBOT_NAME)"/>
      <arg name="IS_SIMULATOR" value="$(arg IS_SIMULATOR)"/>
      <arg name="PUBLISH_COMMAND" value="$(arg PUBLISH_COMMAND)"/>
    </include>

    <include file="$(find potbot)/launch/Filter.launch">
    </include>
    
    <group if="$(arg USE_RVIZ)">
      <include file="$(find potbot)/launch/rviz.launch"/>
    </group>

  </group>

</launch>
