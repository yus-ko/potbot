<launch>
	<env name="GAZEBO_MODEL_PATH" value="$(find potbot)/models:$(optenv GAZEBO_MODEL_PATH)"/>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
	<arg name="world_name" default="$(find turtlebot3_gazebo)/worlds/empty.world"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <include file="$(find potbot)/launch/gazebo/spawn_turtlebot3.launch">
    <arg name="name" value="robot_0"/>
    <arg name="model" value="waffle_pi"/>
  </include>

  <include file="$(find potbot)/launch/gazebo/spawn_turtlebot3.launch">
    <arg name="name" value="robot_1"/>
    <arg name="model" value="burger"/>
    <arg name="x_pos" value="2"/>
    <arg name="y_pos" value="-2"/>
    <arg name="yaw" value="1.57"/>
  </include>

</launch>
