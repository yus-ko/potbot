<launch>
  <arg name="GROUP"                       default="robot_0"/>
  <arg name="IS_SIMULATOR"                default="false"/>
  <arg name="USE_RVIZ"                    default="true"/>
  <arg name="publish_control_command"     default="true"/>
  <arg name="FRAME_ID/GLOBAL"             default="map"/>
  <arg name="FRAME_ID/ODOM"               default="$(arg GROUP)/odom"/>
  <arg name="FRAME_ID/BASE_FOOTPRINT"     default="$(arg GROUP)/base_footprint"/>
  <arg name="FRAME_ID/ROBOT_BASE"         default="$(arg GROUP)/base_link"/>
  <arg name="FRAME_ID/LIDAR"              default="$(arg GROUP)/base_scan"/>
  <arg name="INITIAL/POSE/X"              default="2"/>
  <arg name="INITIAL/POSE/Y"              default="6"/>
  <arg name="INITIAL/POSE/YAW"            default="-1.57"/>
  <arg name="TARGET/POSITION/X"           default="0"/>
  <arg name="TARGET/POSITION/Y"           default="0"/>
  <arg name="TARGET/POSITION/YAW"         default="0"/>
  <arg name="max_linear_velocity"         default="0.2"/>
  <arg name="max_angular_velocity"        default="1.0"/>
  <arg name="TOPIC/SCAN"                  default="/$(arg GROUP)/scan"/>
  <arg name="TOPIC/ODOM"                  default="/$(arg GROUP)/odom"/>
  <arg name="TOPIC/CMD_VEL"               default="/$(arg GROUP)/cmd_vel"/>
  <arg name="TOPIC/GOAL"                  default="/$(arg GROUP)/goal"/>
  <arg name="TOPIC/INITIAL_POSE"          default="/$(arg GROUP)/initialpose"/>
  <arg name="topic_pcl2"                  default="/$(arg GROUP)/realsense/depth/points"/>
  <arg name="clustering_method"           default="Euclidean"/>
  <arg name="FILE/URDF"                   default="$(find turtlebot3_description)/urdf/turtlebot3_waffle_pi.urdf.xacro"/>
  <arg name="FILE/MAP"                    default="$(find potbot_description)/maps/garage.yaml"/>
  <arg name="FILE/FUSION"                 default="$(find potbot_description)/config/waffle_pi_robot_localization.yaml"/>
  <arg name="file_rviz"                   default="$(find potbot_description)/rviz/waffle_pi.rviz"/>

  <group ns="$(arg GROUP)">

    

    <node pkg="tf" type="static_transform_publisher" name="map_tf" args="0 0 0 0 0 0 $(arg FRAME_ID/GLOBAL) $(arg FRAME_ID/ODOM) 100" />
    <!-- <include file="$(find potbot)/launch/env/amcl.launch">
      <arg name="map_file"                value="$(arg FILE/MAP)"/>
      <arg name="initial_pose_topic"      value="$(arg TOPIC/INITIAL_POSE)"/>
      <arg name="initial_pose_x"          value="$(arg INITIAL/POSE/X)"/>
      <arg name="initial_pose_y"          value="$(arg INITIAL/POSE/Y)"/>
      <arg name="initial_pose_a"          value="$(arg INITIAL/POSE/YAW)"/>
      <arg name="odom_frame_id"           value="$(arg FRAME_ID/ODOM)"/>
      <arg name="base_frame_id"           value="$(arg FRAME_ID/ROBOT_BASE)"/>
    </include> -->
    
    <!-- <node pkg="robot_localization" type="ukf_localization_node" name="ukf_se" clear_params="true" output="screen">
      <rosparam command="load"            file="$(arg FILE/FUSION)"/>
      <param name="map_frame"             value="$(arg FRAME_ID/GLOBAL)"/>
      <param name="world_frame"           value="$(arg FRAME_ID/ODOM)"/>
      <param name="odom_frame"            value="$(arg FRAME_ID/ODOM)"/>
      <param name="base_link_frame"       value="$(arg FRAME_ID/BASE_FOOTPRINT)"/>
      <remap from="odometry/filtered"     to="$(arg TOPIC/ODOM)"/>
    </node> -->

    <include file="$(find potbot)/launch/env/potbot.launch">
      <arg name="use_rviz"                      value="$(arg USE_RVIZ)"/>
      <arg name="publish_control_command"       value="$(arg publish_control_command)"/>
      <arg name="frame_id_global"               value="$(arg FRAME_ID/GLOBAL)"/>
      <arg name="frame_id_robot_base"           value="$(arg FRAME_ID/ROBOT_BASE)"/>
      <arg name="max_linear_velocity"           value="$(arg max_linear_velocity)"/>
      <arg name="max_angular_velocity"          value="$(arg max_angular_velocity)"/>
      <arg name="topic_scan"                    value="$(arg TOPIC/SCAN)"/>
      <arg name="topic_odom"                value="$(arg TOPIC/ODOM)"/>
      <arg name="topic_cmd"                 value="$(arg TOPIC/CMD_VEL)"/>
      <arg name="topic_goal"                value="$(arg TOPIC/GOAL)"/>
      <arg name="topic_pcl2"                    value="$(arg topic_pcl2)"/>
      <arg name="clustering_method"             value="$(arg clustering_method)"/>
      <arg name="file_rviz"                     value="$(arg file_rviz)"/>
    </include>

  </group>
</launch>